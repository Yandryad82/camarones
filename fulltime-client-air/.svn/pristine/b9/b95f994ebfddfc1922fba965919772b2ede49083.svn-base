<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:components="skin.components.*" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
			 useHandCursor="true" minWidth="20" >
	<fx:Metadata>
			  [HostComponent("spark.components.Button")]		
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import mx.events.StateChangeEvent;

			import spark.components.Button;


			/* Define the skin elements that should not be colorized.
			For button, the graphics are colorized but the label is not. */
			static private const exclusions:Array = ["labelDisplay"];


			/**
			 * @private
			 */
			override protected function initializationComplete():void {
				super.initializationComplete();
			}

			/**
			 *  @private
			 */
			override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void {
				super.updateDisplayList(unscaledWidth, unscaledHeight);
				
				var cr:Number = getStyle("cornerRadius");

				if (cornerRadius != cr) {
					cornerRadius = cr;
				}

				
			}

			private var cornerRadius:Number = 2;
		]]>
	</fx:Script>

	<s:states>
		<s:State name="up" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="disabled" />
		<s:State name="popUpOver" />
	</s:states>

	<s:BorderContainer id="maiusernButtonPart" width="100%" height="100%" borderColor="0x2a2aff" borderColor.down="#000000" borderColor.over="#777777" cornerRadius="4"
					   minWidth="0" minHeight="0" borderAlpha=".5" borderWeight="2" alpha.disabled="0.3">
		<s:Rect width="100%" height="100%" bottomLeftRadiusX="4" bottomLeftRadiusY="4" bottomRightRadiusX="4" bottomRightRadiusY="4" topLeftRadiusX="4" topLeftRadiusY="4"
				topRightRadiusX="4" topRightRadiusY="4">
			<s:fill>
				<s:LinearGradient rotation="-90">
					<s:GradientEntry id="ge1" color="0x387dda" color.down="0x88bafe" color.over="0x3e81de" alpha=".4" />
					<s:GradientEntry id="ge2" color="0x65a7ff" color.down="0x66a0ef" color.over="0x6facfe" ratio="0.5" alpha=".4" />
					<s:GradientEntry id="ge3" color="0x7fb6ff" color.down="0x66a0ef" color.over="0x8ebdfe" ratio="0.51" alpha=".4" />
					<s:GradientEntry id="ge4" color="0x8bbcff" color.down="0x2f63aa" color.over="0xe2efff" alpha=".4" />
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
	</s:BorderContainer>

	<s:Group width="100%" horizontalCenter="0" verticalCenter="0">
		<s:layout>
			<!--s:HorizontalLayout horizontalAlign="center" paddingBottom="{ hostComponent.getStyle('paddingBottom')}" paddingLeft="{ hostComponent.getStyle('paddingLeft')}"
								paddingRight="{ hostComponent.getStyle('paddingRight')}" paddingTop="{ hostComponent.getStyle('paddingTop')}" verticalAlign="middle" gap="5" /-->
			<s:HorizontalLayout horizontalAlign="center" paddingBottom="3" paddingLeft="10" paddingRight="10" paddingTop="3" verticalAlign="middle" gap="3" />
		</s:layout>
		<s:BitmapImage id="icon" width="{hostComponent.getStyle('iconWidth')}" height="{hostComponent.getStyle('iconHeight')}" verticalCenter="0"
					   source="{hostComponent.getStyle('iconUp')}" alpha="1" alpha.disabled=".2" />
		<s:Label id="labelDisplay" height="20" color="0x000000" color.disabled="0xCCCCCC" color.down="0x0F3E76" color.up="0x000000" fontFamily="Arial" fontSize="12"
				 fontWeight="bold" verticalAlign="middle">
			<s:filters>
				<s:DropShadowFilter color="0xffffff" distance="1" distance.down="2" alpha="0.4" />
			</s:filters>
		</s:Label>
	</s:Group>
</s:SparkSkin>
